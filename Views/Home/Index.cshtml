@using WeatherApp.Models
@model List<CityWeather>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link href="~/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header><h1>Weather App</h1></header>

        <div class="widget">
            @foreach(CityWeather Item in Model)
    {
        <div class="widget-item @(Item.TemperatureFahrenheit < 32 ? "cold" : Item.TemperatureFahrenheit < 60 ? "cool" : Item.TemperatureFahrenheit < 80 ? "mild" : "hot")">
        <p>@Item.CityName</p>
        <p>@Item.DateAndTime.ToString("HH:mm")</p>
        <a href="/weather/@Item.CityUniqueCode">Details</a>


        <h1>@Item.TemperatureFahrenheit<sup>°F</sup></h1>
        </div>
    }

        </div>


	</div>
</body>
</html>
